<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"
        android:background="@color/sd_header_background">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/sd_header_txt_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/act_session_txt_title"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/act_session_txt_title"
            android:layout_alignParentLeft="true"
            android:textColor="@color/sd_header_txt_subtitle"
            android:textSize="13sp"
            android:id="@+id/act_session_txt_subtitle"/>
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/act_session_container_data"
            android:paddingLeft="10dp"
	        android:paddingTop="15dp"
	        android:paddingBottom="20dp"
	        android:paddingRight="10dp">
            <TextView android:id="@+id/act_session_txt_description"
                android:textColor="@color/sd_content_txt_description"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="14sp"/>
            <TextView android:id="@+id/act_session_txt_speakerheader"
                style="@style/SectionHeader"
                android:text="@string/act_session_txt_speakers_singular"/>
            <View android:id="@+id/act_session_view_speakerunderline"
                style="@style/SectionHeader_Underline"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
