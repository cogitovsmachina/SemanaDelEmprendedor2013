<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="4dp"
        android:orientation="vertical"
        android:background="@drawable/grey_frame"
        android:padding="16dp"
        android:id="@+id/act_home_container_agenda">
        <TextView
            style="@style/HomePaneHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/act_main_tab_agenda"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/grey_frame"
        android:padding="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:id="@+id/act_home_container_explore"
        android:orientation="vertical">
        <TextView
            style="@style/HomePaneHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/act_main_tab_explore"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/grey_frame"
        android:layout_marginLeft="4dp"
        android:padding="16dp"
        android:id="@+id/act_home_container_stream"
        android:orientation="vertical">
        <TextView
            style="@style/HomePaneHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/act_main_tab_stream"/>
    </LinearLayout>

</LinearLayout>